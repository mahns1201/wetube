extends base

block content
    div
        video#preview
        button#actionBtn Start Recording

    if errorMessage
        span=errorMessage

    form(method="POST", enctype="multipart/form-data")
        label(for="video") Video File
        input(type="file", accept="video/*", required, id="video", name="video")
        label(for="thumb") Thumbnail File
        input(type="file", accept="image/*", required, id="thumb", name="thumb")
        input(name="title", type="text", placeholder="Title", minlength=5, required)
        input(name="description", type="text", placeholder="Description", maxlength=100, required)
        input(name="hashtags", type="text", placeholder="Hashtags" required)
        input(type="submit", value="Upload")

block scripts
    script(src="/assets/js/recorder.js")