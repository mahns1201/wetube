extends templates/layout
include mixins/movies

block content
  div#videoContainer
    video(src="https://parular-contents.s3.ap-northeast-2.amazonaws.com/duplicate/product/20211118_o7DP3Y557VnqyH4qV2h8Hh.mp4")
    div#videoControls
      button#play Play
      button#mute Mute
      input(type="range",step="0.1", value=0.5, min="0", max="1")#volume
      div
        span#currentTime 00:00
        span  /
        span#totalTime 00:00
      div
        input(type="range",step="1", value="0", min="0")#timeline
      div
        button#fullScreen Enter Full Screen

  h1=pageTitle
  ul
    each movie in movies
      li
        +movie(movie)

  script(src="/assets/js/videoPlayer.js")